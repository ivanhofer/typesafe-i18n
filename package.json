{
	"name": "typesafe-i18n",
	"version": "4.2.2",
	"description": "An opinionated, fully type-safe, lightweight localization library for TypeScript and JavaScript projects with no external dependencies.",
	"author": "ivanhofer",
	"homepage": "https://github.com/ivanhofer/typesafe-i18n",
	"repository": {
		"type": "git",
		"url": "https://github.com/ivanhofer/typesafe-i18n"
	},
	"keywords": [
		"i18n",
		"typescript",
		"internationalization",
		"typesafe",
		"l10n",
		"localization",
		"internationalization library",
		"localization library",
		"localization engine",
		"lightweight"
	],
	"license": "MIT",
	"module": "runtime/esm/runtime/src/index.mjs",
	"main": "runtime/cjs/runtime/src/index.cjs",
	"types": "types/index.d.ts",
	"exports": {
		"./adapters/*": {
			"import": "./adapters/*.mjs",
			"require": "./adapters/*.cjs"
		},
		"./angular/angular-service": {
			"import": "./angular/angular-service.mjs",
			"require": "./angular/angular-service.cjs"
		},
		"./detectors": {
			"import": "./detectors/index.mjs",
			"require": "./detectors/index.cjs"
		},
		"./formatters": {
			"import": "./formatters/index.mjs",
			"require": "./formatters/index.cjs"
		},
		"./exporter": {
			"import": "./exporter/index.mjs",
			"require": "./exporter/index.cjs"
		},
		"./importer": {
			"import": "./importer/index.mjs",
			"require": "./importer/index.cjs"
		},
		"./parser": {
			"import": "./parser/index.mjs",
			"require": "./parser/index.cjs"
		},
		"./react/react-context": {
			"import": "./react/react-context.mjs",
			"require": "./react/react-context.cjs"
		},
		"./svelte/svelte-store": {
			"import": "./svelte/svelte-store.mjs",
			"require": "./svelte/svelte-store.cjs"
		},
		"./vue/vue-adapter": {
			"import": "./svelte/svelte-store.mjs",
			"require": "./svelte/svelte-store.cjs"
		},
		"./rollup/*": "./rollup/*.js",
		"./webpack/*": "./webpack/*.js",
		".": {
			"import": "./runtime/esm/runtime/src/index.mjs",
			"require": "./runtime/cjs/runtime/src/index.cjs"
		},
		"./package.json": "./package.json"
	},
	"files": [
		"/adapters",
		"/angular",
		"/detectors",
		"/cli",
		"/dist",
		"/exporter",
		"/formatters",
		"/importer",
		"/parser",
		"/react",
		"/rollup",
		"/runtime",
		"/schema",
		"/svelte",
		"/types",
		"/vue",
		"/webpack"
	],
	"scripts": {
		"-- DEV -------------------------------------------------": "",
		"update:dependencies": "pnpm up -r",
		"update:version": "tsm ./update-version.ts",
		"clear": "rm -rf ./angular ./adapters ./cli ./detectors ./dist ./exporter ./formatters ./importer ./parser ./react ./rollup ./runtime ./schema ./svelte ./types ./vue ./webpack ./temp-output",
		"-- LINT ------------------------------------------------": "",
		"lint": "eslint --cache packages",
		"lint:ci": "eslint --cache --fix",
		"lint:fix": "pnpm lint:ci -- packages",
		"-- TEST ------------------------------------------------": "",
		"test": "pnpm -r generate:json-schema && pnpm -r test && pnpm test:rest",
		"test:rest": "require-self && uvu -r tsm -i generated -i importer/test packages test",
		"test:rest:watch": "watchlist packages -- pnpm test",
		"test:update-generated-files": "tsm packages/generator/test/generated/update.ts",
		"test:size": "size-limit",
		"-- BUILD -----------------------------------------------": "",
		"build": "pnpm clear && pnpm update:version && pnpm -r generate:json-schema && pnpm build:packages && pnpm link-typedefinitions && pnpm fix-imports",
		"build:packages": "pnpm recursive run build --filter @typesafe-i18n/*",
		"fix-imports": "tsm ./packages/fix-imports.ts",
		"link-typedefinitions": "tsm ./packages/link-typedefinitions.ts",
		"-- OTHER -----------------------------------------------": "",
		"lint-staged": "lint-staged",
		"prepare": "husky install"
	},
	"devDependencies": {
		"@size-limit/preset-small-lib": "^7.0.8",
		"@types/glob": "^7.2.0",
		"@types/node": "^17.0.18",
		"@typescript-eslint/eslint-plugin": "^5.12.0",
		"@typescript-eslint/parser": "^5.12.0",
		"eslint": "^8.9.0",
		"eslint-config-prettier": "^8.4.0",
		"eslint-plugin-prettier": "^4.0.0",
		"glob": "^7.2.0",
		"husky": "^7.0.4",
		"lint-staged": "^12.3.4",
		"prettier": "^2.5.1",
		"require-self": "^0.2.3",
		"size-limit": "^7.0.8",
		"tsm": "^2.2.1",
		"typescript": "^4.5.5",
		"typescript-json-schema": "^0.53.0",
		"uvu": "^0.5.3",
		"watchlist": "^0.3.1"
	},
	"peerDependencies": {
		"typescript": ">=3.5.1"
	},
	"bin": {
		"typesafe-i18n": "cli/typesafe-i18n.mjs"
	},
	"funding": {
		"type": "github",
		"url": "https://github.com/sponsors/ivanhofer"
	},
	"volta": {
		"node": "16.14.0",
		"npm": "8.5.1"
	}
}