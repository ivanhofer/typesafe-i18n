{
  "name": "@typesafe-i18n/formatters",
  "scripts": {
    "dev": "tsm esbuild.ts --watch",
    "build": "tsm esbuild.ts && tsc -p tsconfig.json --emitDeclarationOnly && tsm ./generateTreeShakableIndexFile.ts",
    "test": "uvu -r tsm test",
    "test:watch": "watchlist src test -- pnpm test"
  },
  "devDependencies": {
    "esbuild": "^0.14.36",
    "tsm": "^2.2.1",
    "typescript": "^4.6.3",
    "uvu": "^0.5.3",
    "watchlist": "^0.3.1"
  }
}