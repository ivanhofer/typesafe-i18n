{
  "name": "@typesafe-i18n/importer",
  "scripts": {
    "dev": "tsx esbuild.ts --watch",
    "build": "tsx esbuild.ts && tsc -p tsconfig.json --emitDeclarationOnly",
    "test": "cd test && uvu -r @esbuild-kit/cjs-loader -i generated -i snapshots . && cd ..",
    "test:watch": "watchlist src test -- pnpm test",
    "test:update-generated-files": "tsx test/snapshots/update.ts"
  },
  "devDependencies": {
    "@typesafe-i18n/runtime": "workspace:../runtime/src",
    "@typesafe-i18n/generator": "workspace:../generator/src",
    "@typesafe-i18n/config": "workspace:../config/src",
    "esbuild": "^0.14.49",
    "tiny-glob": "^0.2.9",
    "tsx": "^3.8.0",
    "typescript": "^4.7.4",
    "uvu": "^0.5.6",
    "watchlist": "^0.3.1"
  },
  "type": "module"
}